<%= render 'shared/error_messages', object: f.object %>
<div class="form-group">
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name, class: "form-control", placeholder: 'Enter the name of the room type' %>
</div>
<div class="form-group">
  <%= f.label :picture, 'Picture' %>
  <%= f.text_field :picture, class: "form-control", placeholder: 'Enter the URL of a picture' %>
</div>
<div class="form-group">
  <%= f.label :price, 'Price' %>
  <%= f.number_field :price, class: "form-control", placeholder: 'Enter the price of the room' %>
</div>
<div class="form-group">
  <%= label_tag :number_of_rooms, "Number of rooms"  %>
  <%= number_field :rooms, :number_of_rooms, class: "form-control", placeholder: 'Enter the number of rooms' %>
</div>
<%= f.submit 'Save', class: 'btn btn-default' %>